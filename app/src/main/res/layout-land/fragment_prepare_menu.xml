<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:weightSum="2">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageButton
            android:id="@+id/prepare_menu_hurricane_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/prepare_menu_hurricane_button"
            app:srcCompat="@mipmap/hurricane_icon" />

        <ImageButton
            android:id="@+id/prepare_menu_extreme_heat_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/extreme_heat_icon"
            android:contentDescription="@string/prepare_menu_extreme_heat_button"/>

        <ImageButton
            android:id="@+id/prepare_menu_flood_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/flood_icon"
            android:contentDescription="@string/prepare_menu_flood_button"/>

        <ImageButton
            android:id="@+id/prepare_menu_fire_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/fire_icon"
            android:contentDescription="@string/prepare_menu_fire_button"/>
    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageButton
            android:id="@+id/prepare_menu_earthquake_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/earthquake_icon"
            android:contentDescription="@string/prepare_menu_earthquake_button"/>

        <ImageButton
            android:id="@+id/prepare_menu_tsunami_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/tsunami_icon"
            android:contentDescription="@string/prepare_menu_tsunami_button"/>

        <ImageButton
            android:id="@+id/prepare_menu_volcanic_eruption_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/volcanic_eruption_icon"
            android:contentDescription="@string/prepare_menu_volcanic_eruption_button"/>

        <ImageButton
            android:id="@+id/prepare_menu_avalanche_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/avalanche_icon"
            android:contentDescription="@string/prepare_menu_avalanche_button"/>

    </TableRow>
</TableLayout>